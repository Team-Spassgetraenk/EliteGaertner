<link href="https://fonts.googleapis.com/css2?family=Patrick+Hand&display=swap" rel="stylesheet">

<div class="page-container background-style">
    
    @* --- TOP BAR: Titel und Menü --- *@
    <header class="top-bar">

        @* Ranglisten-Icon (links) - Bleibt leer, um das Layout zu erhalten *@
        <div class="icon-wrapper">
            <span class="icon-label"></span>
        </div>

        @* Titel *@
        <h1 class="page-title">Profil verwalten</h1>

        @* Hamburger Menü (rechts) *@
        <div class="header-right-action menu-wrapper">
            <span class="hamburger-icon" @onclick="ToggleLogoutMenu">☰</span>
            @if (showLogout)
            {
                <div class="logout-menu comic-box">
                    <p @onclick="NavigateToLogout">Logout &lt;</p>
                </div>
            }
        </div>
    </header>

    <div class="scroll-content">
        
        @* --- Box für Kontaktdaten/Passwort --- *@
        <div class="management-box comic-box">
            
            @* Passwort *@
            <div class="input-group">
                <label>Passwort</label>
                <div class="input-wrapper">
                    <input type="password" value="123bier" readonly />
                    <span class="edit-icon" @onclick="ChangePassword">⚙️</span>
                </div>
                <button class="action-button password-change-button" @onclick="ChangePassword">Passwort ändern</button>
            </div>
            
            @* E-Mail *@
            <div class="input-group">
                <label>Email</label>
                <div class="input-wrapper">
                    <input type="email" value="max.mustermann@gmail.com" readonly />
                    <span class="edit-icon" @onclick="EditEmail">⚙️</span>
                </div>
            </div>
            
            @* Telefonnummer *@
            <div class="input-group">
                <label>Telefonnummer</label>
                <div class="input-wrapper">
                    <input type="tel" value="+49 174 123456789" readonly />
                    <span class="edit-icon" @onclick="EditPhone">⚙️</span>
                </div>
            </div>
        </div>

        @* --- Trennlinie (Basierend auf Abbildung 9) --- *@
        <div class="divider"></div>

        @* --- Box für Biografie und Fotos --- *@
        <div class="management-box comic-box">
            
            @* Biografie *@
            <div class="input-group">
                <label>Biographie...</label>
                <div class="bio-wrapper">
                    <p>@bioText</p>
                    <button class="action-button edit-bio-button" @onclick="EditBio">bearbeiten ⚙️</button>
                </div>
            </div>

            @* --- Meine Fotos Gallerie --- *@
            <h3 class="gallery-title">Meine Fotos</h3>
            <div class="harvest-grid">
                
                @foreach (var imgPath in uploadedImages)
                {
                    <div class="grid-item comic-grid-item">
                        <img src="@imgPath" alt="Erntebild" class="harvest-photo" />
                        <div class="delete-overlay" @onclick="() => DeletePhoto(imgPath)">
                            <span class="delete-icon">✖</span>
                        </div>
                    </div>
                }
                
                @* Platzhalter zum Vergleich mit Abbildung 9 *@
                <div class="grid-item comic-grid-item delete-placeholder">
                    <span class="delete-icon-text">Foto löschen</span>
                </div>
            </div>
        </div>
        
        @* --- Änderungen Speichern Button --- *@
        <button class="save-button" @onclick="SaveChanges">Änderungen speichern</button>
        
    </div>

    @* --- Bottom Nav (Leer, da nicht Teil dieser Seite, aber Container für Layout) --- *@
    <footer class="bottom-nav">
        </footer>
</div>

