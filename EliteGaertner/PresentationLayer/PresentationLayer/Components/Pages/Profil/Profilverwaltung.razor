    .harvest-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr); 
        gap: 17px;
    }

    .grid-item {
        position: relative;
        width: 100%;
        padding-bottom: 177.77%; 
        overflow: hidden;
    }

    .comic-grid-item {
        background-color: #fff;
        border: 4px solid #000;
        border-radius: 8px;
        box-shadow: 4px 4px 0 0 #000;
        cursor: pointer;
    }

    .harvest-photo {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    
    /* Lösch-Overlay für Bilder */
    .delete-overlay {
        position: absolute;
        top: -10px;
        right: -10px;
        width: 30px;
        height: 30px;
        background-color: #D62828; /* Rot */
        border: 3px solid #000;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 10;
        box-shadow: 2px 2px 0 0 #000;
    }
    .delete-icon {
        color: #fff;
        font-size: 18px;
        font-weight: bold;
        line-height: 1;
    }
    
    /* Platzhalter für "Foto löschen" (basierend auf Abbildung 9) */
    .delete-placeholder {
        background: none;
        border: none;
        box-shadow: none;
        display: flex;
        justify-content: flex-start;
        align-items: center;
        cursor: default;
        padding-bottom: 0;
        height: 30px; /* Höhe des Overlays */
        width: 100%;
        position: static;
        transform: translateY(-100%); /* Visuell an das Overlay anpassen */
    }
    .delete-icon-text {
        background-color: #fff;
        border: 2px solid #000;
        border-radius: 5px;
        padding: 5px 10px;
        font-size: 16px;
        font-weight: bold;
        box-shadow: 2px 2px 0 0 #000;
        white-space: nowrap;
        margin-left: 20px;
    }
    
    /* --- SPEICHERN BUTTON --- */
    .save-button {
        width: calc(100% - 30px); /* Basierend auf 20px Padding links/rechts */
        margin: 0 15px 30px 15px;
        padding: 15px;
        background-color: #4CAF50; /* Grün */
        color: #fff;
        border: 5px solid #000;
        border-radius: 10px;
        font-size: 24px;
        font-weight: bold;
        text-align: center;
        box-shadow: 6px 6px 0 0 #000;
        cursor: pointer;
        transition: transform 0.1s;
    }

    .save-button:active {
        transform: translate(6px, 6px);
        box-shadow: 0 0 0 0 #000;
    }

    /* --- BOTTOM NAV (Ausblenden) --- */
    .bottom-nav {
        display: none;
    }
</style>

