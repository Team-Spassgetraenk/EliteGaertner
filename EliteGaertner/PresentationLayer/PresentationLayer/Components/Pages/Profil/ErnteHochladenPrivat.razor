@page "/ernte-hochladen-privat"

@using AppLogic.Interfaces
@using PresentationLayer.Services
@using PresentationLayer.Shared
@using PresentationLayer.State
@using Microsoft.Extensions.Logging

@inject CurrentProfileState CurrentProfile
@inject SessionService Session
@inject IUploadService UploadService
@inject IProfileMgm ProfileMgm
@inject IImageUploadService ImageUploadService
@inject NavigationManager Nav
@inject ILogger<ErnteHochladenPrivat> Logger

<link href="https://fonts.googleapis.com/css2?family=Patrick+Hand&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600&display=swap" rel="stylesheet">

<div class="page-container background-style">
    <header class="top-bar">
        @* Linke Seite *@
        <div class="icon-wrapper left"
             style="display: flex; align-items: center; gap: 8px; font-weight: bold; font-size: 1.5rem;"
             @onclick="GoBackToProfile">
            <i class="bi bi-chevron-left"></i>
            <span>Zur√ºck</span>
        </div>

        @* Mitte (wird durch CSS absolut zentriert) *@
        <h1 class="page-title">Ernte hochladen</h1>

        @* Rechte Seite *@
        <div class="header-right-group" style="display: flex; align-items: center; gap: 20px;">
            @if (!string.IsNullOrEmpty(CurrentProfile.UserName))
            {
                <span class="logged-in-user" style="font-weight: bold; font-size: 1.5rem;">
                    üë§ @($"@{CurrentProfile.UserName}")
                </span>
            }
            <div class="menu-icon-container" @onclick="ToggleLogoutMenu">
                <span class="menu-icon">‚ò∞</span>
            </div>
        </div>
    </header>
    
    @if (_showLogout)
    {
        <div class="logout-menu admin-menu-ext">
            <p class="logout-link" @onclick="Session.Logout">Logout ‚ûú]</p>  
            <div class="admin-header" @onclick="NavigateToAboutUs">
                <span>‚ÑπÔ∏è √úber uns</span>
            </div>
        </div>
    }
    
    <div class="login-center">

        <div class="register-card ernte-parameter-card">

            <div class="logo-container">
                <img src="pictures/EliteG√§rtner_logo.png" alt="EliteG√§rtner Logo" class="app-logo"/>
                <h2 class="elitegaertner-title">EliteG√§rtner.</h2>
            </div>

            <h3 class="register-title">Deine Ernte ver√∂ffentlichen</h3>

            <div class="form-layout">

                @* --- LINKA SPALTE: Bild und Upload-Button (Vertikal zentriert zur rechten Spalte) --- *@
                <div class="left-column">
                    @* --- Flexibler Bild-Container (Passt sich der Bildgr√∂√üe an) --- *@
                    <div class="ernte-image-container">
                        @if (string.IsNullOrEmpty(_hochgeladenesBild))
                        {
                            @* **Platzhalter-Bild** (Hier ein statisches Bild zur besseren Visualisierung) *@
                            <img src="pictures/PlatzhalterBild.jpg" alt="Bild-Platzhalter" class="ernte-image placeholder-img"/>
                            <div class="placeholder-text-overlay">
                            </div>
                        }
                        else
                        {
                            @* Flexibles hochgeladenes Bild *@
                            <img src="@_hochgeladenesBild" alt="Erntebild" class="ernte-image"/>
                        }
                    </div>

                    <InputFile id="file-upload" OnChange="HandleFileSelection" hidden/>
                    <label for="file-upload" class="app-button secondary-button upload-button">
                        Erntebild hochladen
                    </label>

                </div>

                @* --- RECHTE SPALTE: Tags und Parameter --- *@
                <div class="right-column">

                    <h4 class="tag-headline">Gem√ºse</h4>
                    <div class="tag-grid">
                        @foreach (var tag in TagCatalog.Gemuese)
                        {
                            <div class="tag app-tag @(_selectedTagIds.Contains(tag.TagId) ? "selected" : "")"
                                 @onclick="() => ToggleTag(tag.TagId)">
                                <span>@tag.Icon</span> <span>@tag.Name</span>
                            </div>
                        }
                    </div>

                    <h4 class="tag-headline">Obst</h4>
                    <div class="tag-grid">
                        @foreach (var tag in TagCatalog.Obst)
                        {
                            <div class="tag app-tag @(_selectedTagIds.Contains(tag.TagId) ? "selected" : "")"
                                 @onclick="() => ToggleTag(tag.TagId)">
                                <span>@tag.Icon</span> <span>@tag.Name</span>
                            </div>
                        }
                    </div>

                    <div class="parameter-row">
                        @* Eingabefelder werden durch CSS-Regeln auf max-width begrenzt *@
                        <div class="input-group">
                            <label class="input-label">Gewicht (in g)</label>
                            <input type="number" class="app-input" @bind="Gewicht" placeholder="z.B. 300"/>
                        </div>

                        <div class="input-group">
                            <label class="input-label">L√§nge (in cm)</label>
                            <input type="number" class="app-input" @bind="Laenge" placeholder="z.b. 67"/>
                        </div>

                        <div class="input-group">
                            <label class="input-label">Breite (in cm)</label>
                            <input type="number" class="app-input" @bind="Breite" placeholder="z.B. 25"/>
                        </div>
                    </div>

                    <h4 class="tag-headline">Kommentar</h4>
                    <div class="input-group">
                        <textarea class="app-input" maxlength="150" @bind="Kommentar"
                                  placeholder="Beschreibe kurz deine Ernte..."></textarea>
                        <div class="char-counter">@Kommentar.Length / 150</div>
                    </div>
                </div>
            </div>

            <button class="app-button primary-button weiter-button"
                    disabled="@(
                              _selectedTagIds.Count == 0 ||
                              string.IsNullOrWhiteSpace(_hochgeladenesBild) ||
                              Kommentar is null || string.IsNullOrWhiteSpace(Kommentar) ||
                              Gewicht is null || Gewicht <= 0 ||
                              Laenge is null || Laenge <= 0 ||
                              Breite is null || Breite <= 0
                              )"
                    @onclick="Ver√∂ffentlichenAsync">
                Ernte ver√∂ffentlichen
            </button>

            @if (
                _selectedTagIds.Count == 0 ||
                string.IsNullOrWhiteSpace(_hochgeladenesBild) ||
                Kommentar is null || string.IsNullOrWhiteSpace(Kommentar) ||
                Gewicht is null || Gewicht <= 0 ||
                Laenge is null || Laenge <= 0 ||
                Breite is null || Breite <= 0
            )
            {
                <p class="disabled-hint">
                    Bitte lade zuerst ein Bild hoch, w√§hle mindestens ein Tag aus, schreibe eine Beschreibung und f√ºlle Gewicht, L√§nge und Breite aus.
                </p>
            }
        </div>
    </div>
</div>

@code {
    
    // ----------------------------
    // UI State
    // ----------------------------
    private string _loggedInUserName = "";
    
    private bool _showLogout = false;
    
    private string? _hochgeladenesBild = null;
    private List<int> _selectedTagIds = new ();
    private int? Gewicht { get; set; }
    private int? Laenge { get; set; }
    private int? Breite { get; set; }
    private string Kommentar { get; set; } = "";


    protected override void OnInitialized()
    {
        //√úberpr√ºfung
        if (CurrentProfile.LoggedInProfile is null)
        {
            Logger.LogWarning("ErnteHochladenPrivat: Kein eingeloggtes Profil gefunden. Redirect zu /.");
            Nav.NavigateTo("/");
        }
    }
    
    private void ToggleTag(int tagId)
    {
        //√úber UI soll nur ein Tag pro Upload erlaubt sein
        //F√ºr die Zukunft k√∂nnten wir aber umstellen, dass er mehrere Tags animmt
        if (_selectedTagIds.Contains(tagId))
        {
            //Nochmal klicken -> abw√§hlen
            _selectedTagIds.Clear();
            Logger.LogInformation("ErnteHochladenPrivat: Tag abgew√§hlt. TagId={TagId}", tagId);
            return;
        }

        // Neues Tag w√§hlen -> alle anderen abw√§hlen
        _selectedTagIds.Clear();
        _selectedTagIds.Add(tagId);
        Logger.LogInformation("ErnteHochladenPrivat: Tag gew√§hlt. TagId={TagId}", tagId);
    }

    private async Task HandleFileSelection(InputFileChangeEventArgs e)
    {
        var file = e.File;
        Logger.LogDebug("ErnteHochladenPrivat: Datei-Auswahl Event empfangen.");
        
        if (file is null)
        {
            Logger.LogWarning("ErnteHochladenPrivat: Keine Datei im InputFileChangeEvent.");
            return;
        }

        try
        {
            // Speichern passiert im Service (inkl. Ordner anlegen / Dateiname generieren etc.)
            // R√ºckgabe ist ein relativer Pfad (z.B. "/tempUploads/<guid>.jpg"), den wir direkt rendern k√∂nnen.
            _hochgeladenesBild = await ImageUploadService.SaveImageAsync(file);

            Logger.LogInformation("ErnteHochladenPrivat: Bild gespeichert. Pfad={BildPfad} Dateiname={Dateiname} GroesseBytes={Groesse}", _hochgeladenesBild, file.Name, file.Size);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "ErnteHochladenPrivat: Fehler beim Hochladen. Dateiname={Dateiname} GroesseBytes={Groesse}", file.Name, file.Size);
        }
    }

    private async Task Ver√∂ffentlichenAsync()
    {
        //√úberpr√ºfung
        if (CurrentProfile.ProfileId is null)
        {
            Logger.LogWarning("ErnteHochladenPrivat: ProfileId ist null. Redirect zu /.");
            Nav.NavigateTo("/");
            return;
        }
        //Tags + Bild m√ºssen da sein
        if (string.IsNullOrWhiteSpace(_hochgeladenesBild) || _selectedTagIds.Count == 0)
        {
            Logger.LogDebug("ErnteHochladenPrivat: Validierung fehlgeschlagen (Bild/Tag). BildLeer={BildLeer} TagCount={TagCount}", string.IsNullOrWhiteSpace(_hochgeladenesBild), _selectedTagIds.Count);
            return;
        }
        
        //Beschreibung (Kommentar) muss vorhanden sein
        if (string.IsNullOrWhiteSpace(Kommentar))
        {
            Logger.LogDebug("ErnteHochladenPrivat: Validierung fehlgeschlagen (Kommentar leer)." );
            return;
        }
        //Gewicht, Breite, L√§nge m√ºssen da sein
        if (Gewicht is null || Laenge is null || Breite is null)
        {
            Logger.LogDebug("ErnteHochladenPrivat: Validierung fehlgeschlagen (Parameter null). GewichtNull={GewichtNull} LaengeNull={LaengeNull} BreiteNull={BreiteNull}", Gewicht is null, Laenge is null, Breite is null);
            return;
        }

        var harvestUpload = new HarvestUploadDto
        {
            ProfileId = CurrentProfile.ProfileId.Value,
            ImageUrl = _hochgeladenesBild,
            Description = Kommentar.Trim(),
            WeightGram = Gewicht.Value,
            LengthCm = Laenge.Value,
            WidthCm = Breite.Value,
            UploadDate = DateTime.UtcNow,
            TagIds = _selectedTagIds.ToList()
        };

        try
        {
            Logger.LogInformation("ErnteHochladenPrivat: HarvestUpload wird erstellt. ProfileId={ProfileId} TagIds={TagIds} Gewicht={Gewicht} Laenge={Laenge} Breite={Breite} BildPfad={BildPfad}", harvestUpload.ProfileId, string.Join(",", harvestUpload.TagIds ?? new List<int>()), harvestUpload.WeightGram, harvestUpload.LengthCm, harvestUpload.WidthCm, harvestUpload.ImageUrl);
            UploadService.CreateHarvestUpload(harvestUpload);

            // State aktualisieren, damit neues Bild sofort sichtbar ist
            CurrentProfile.RefreshProfile(ProfileMgm);
            Logger.LogInformation("ErnteHochladenPrivat: State refresh durchgef√ºhrt. Navigiere zu /EigenesUserProfil.");

            // Zur Profilseite zur√ºck
            Nav.NavigateTo("/EigenesUserProfil");
        }
        catch (Exception ex)
        {
            //Ver√∂ffentlichenAsync failed:
            Logger.LogError(ex, "ErnteHochladenPrivat: Ver√∂ffentlichenAsync failed.");
        }
    }
    
    //Aktionen
    private void ToggleLogoutMenu()
    {
        _showLogout = !_showLogout;
        Logger.LogDebug("ErnteHochladenPrivat: ToggleLogoutMenu -> ShowLogout={ShowLogout}.", _showLogout);
    }

    //Navigation
    private void GoBackToProfile()
    {
        Logger.LogInformation("ErnteHochladenPrivat: Navigation -> EigenesUserProfil.");
        Nav.NavigateTo("/EigenesUserProfil");
    }
    
    private void NavigateToAboutUs()
    {
        Logger.LogInformation("ErnteHochladenPrivat: Navigation -> Ueber-Uns.");
        Nav.NavigateTo("/ueber-uns");
    }
}
