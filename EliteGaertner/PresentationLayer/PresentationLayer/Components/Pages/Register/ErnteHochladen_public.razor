int? Breite { get; set; }
string Kommentar { get; set; } = "";

void ToggleTag(string tag)
{
_selectedTag = (_selectedTag == tag) ? null : tag;
}

    private async Task HandleFileSelection(InputFileChangeEventArgs e)
    {
        var file = e.File;
        if (file == null) return;

        try
        {
            var maxFileSize = 5 * 1024 * 1024;
            if (file.Size > maxFileSize)
            {
                Console.WriteLine("Die Datei ist zu gro√ü.");
                return;
            }
        
            //tempUploads-Ordner erstellen (falls nicht vorhanden)
            var uploadsDir = Path.Combine(Env.WebRootPath, "tempUploads");
            Directory.CreateDirectory(uploadsDir);
        
            //UUID-Dateiname generieren + Extension behalten
            var extension = Path.GetExtension(file.Name);
            var fileName = $"{Guid.NewGuid().ToString("N")}{extension}";
            var filePath = Path.Combine(uploadsDir, fileName);
        
            // Datei in Ordner speichern
            using var stream = file.OpenReadStream(maxFileSize);
            using var fileStream = new FileStream(filePath, FileMode.Create);
            await stream.CopyToAsync(fileStream);
            
            _hochgeladenesBild = $"/tempUploads/{fileName}";
        
            Console.WriteLine($"Bild gespeichert: {filePath}");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Fehler beim Hochladen: {ex.Message}");
        }
    }

    void Ver√∂ffentlichen()
    {
        if (string  .IsNullOrEmpty(_selectedTag) || string.IsNullOrEmpty(_hochgeladenesBild)) return;

        // TODO: echten profileId z.B. aus Auth/Context holen
        int profileId = RegistrationState.ProfileId;

        float weightGram = (Gewicht ?? 0);
        float lengthCm = Laenge ?? 0;
        float widthCm = Breite ?? 0;

        var dto = new HarvestUploadDto
        {
            UploadId = 0, //Von Upload Service
            ImageUrl = _hochgeladenesBild!, // aktuell Data-URL; sp√§ter URL aus Storage
            Description = Kommentar,
            WeightGram = weightGram,
            WidthCm = widthCm,
            LengthCm = lengthCm,
            UploadDate = DateTime.UtcNow,
            ProfileId = profileId
        };

        try
        {
            UploadService.CreateHarvestUpload(dto);
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex + "Upload fehlgeschlagen");
        }
        
        Console.WriteLine($"Ver√∂ffentlicht: {_selectedTag}, Bildgr√∂√üe: {_hochgeladenesBild.Length}");
        Nav.NavigateTo("/welcome");
        
    }
}
