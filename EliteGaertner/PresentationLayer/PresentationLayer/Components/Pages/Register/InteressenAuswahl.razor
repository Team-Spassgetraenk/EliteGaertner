        box-shadow: 4px 4px 0 0 #000;
    }

    /* --- Button --- */
    .app-button {
        width: 100%;
        padding: 12px;
        font-size: 1.5rem;
        font-weight: bold;
        text-align: center;
        border: 3px solid #000;
        border-radius: 8px;
        cursor: pointer;
        margin-top: 20px;
        box-shadow: 4px 4px 0 0 #000;
        transition: transform 0.1s, box-shadow 0.1s, background-color 0.2s;
    }

    .primary-button {
        background-color: #8B45B3; /* Main Purple */
        color: white;
    }

    .app-button:active {
        transform: translate(4px, 4px);
        box-shadow: 0 0 0 0 #000;
    }

    /* Stil f√ºr DEAKTIVIERTEN Button */
    .app-button:disabled {
        background-color: #ccc; 
        color: #999; 
        border-color: #999; 
        cursor: not-allowed;
        transform: none;
        box-shadow: 2px 2px 0 0 #999;
    }
    
    /* Hinweis-Text, wenn Button deaktiviert ist */
    .disabled-hint {
        text-align: center;
        color: #999;
        font-size: 1rem;
        margin-top: 10px;
        margin-bottom: 0;
        font-style: italic;
    }
</style>