<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600&display=swap" rel="stylesheet">

<div class="register-page-container">
    <div class="login-center">

        <div class="register-card ernte-parameter-card">

            <div class="logo-container">
                <img src="pictures/EliteG√§rtner_logo.png" alt="EliteG√§rtner Logo" class="app-logo" />
                <h2 class="elitegaertner-title">EliteG√§rtner.</h2>
            </div>

            <h3 class="register-title">Deine Ernte ver√∂ffentlichen</h3>

            <div class="form-layout">

                @* --- LINKA SPALTE: Bild und Upload-Button (Vertikal zentriert zur rechten Spalte) --- *@
                <div class="left-column">
                    @* --- Flexibler Bild-Container (Passt sich der Bildgr√∂√üe an) --- *@
                    <div class="ernte-image-container">
                        @if (string.IsNullOrEmpty(_hochgeladenesBild))
                        {
                        @* **Platzhalter-Bild** (Hier ein statisches Bild zur besseren Visualisierung) *@
                        <img src="pictures/PlatzhalterBild.jpg" alt="Bild-Platzhalter" class="ernte-image placeholder-img" />
                        <div class="placeholder-text-overlay">
                            <span class="bi bi-camera" style="font-size: 3rem;"></span>
                        </div>
                        }
                        else
                        {
                        @* Flexibles hochgeladenes Bild *@
                        <img src="@_hochgeladenesBild" alt="Erntebild" class="ernte-image" />
                        }
                    </div>

                    <InputFile id="file-upload" OnChange="HandleFileSelection" hidden />
                    <label for="file-upload" class="app-button secondary-button upload-button">
                        <span class="bi bi-upload"></span> Erntebild hochladen
                    </label>

                </div>

                @* --- RECHTE SPALTE: Tags und Parameter --- *@
                <div class="right-column">
                    <h4 class="tag-headline">Gem√ºse</h4>
                    <div class="tag-grid">
                        @foreach (var tag in _gemueseTags)
                        {
                        <div class="tag app-tag @(_selectedTag == tag.Name ? "selected" : "")"
                             @onclick="() => ToggleTag(tag.Name)">
                            <span>@tag.Emoji</span> <span>@tag.Name</span>
                        </div>
                        }
                    </div>

                    <h4 class="tag-headline">Obst</h4>
                    <div class="tag-grid">
                        @foreach (var tag in _obstTags)
                        {
                        <div class="tag app-tag @(_selectedTag == tag.Name ? "selected" : "")"
                             @onclick="() => ToggleTag(tag.Name)">
                            <span>@tag.Emoji</span> <span>@tag.Name</span>
                        </div>
                        }
                    </div>

                    <div class="parameter-row">
                        @* Eingabefelder werden durch CSS-Regeln auf max-width begrenzt *@
                        <div class="input-group">
                            <label class="input-label">Gewicht (in g)</label>
                            <input type="number" class="app-input" @bind="Gewicht" placeholder="z.B. 300" />
                        </div>

                        <div class="input-group">
                            <label class="input-label">L√§nge (in cm)</label>
                            <input type="number" class="app-input" @bind="Laenge" placeholder="z.b. 67" />
                        </div>

                        <div class="input-group">
                            <label class="input-label">Breite (in cm)</label>
                            <input type="number" class="app-input" @bind="Breite" placeholder="z.B. 25" />
                        </div>
                    </div>

                    <h4 class="tag-headline">Kommentar</h4>
                    <div class="input-group">
                        <textarea class="app-input" maxlength="150" @bind="Kommentar"
                                  placeholder="Beschreibe kurz deine Ernte..."></textarea>
                        <div class="char-counter">@Kommentar.Length / 150</div>
                    </div>
                </div>
            </div>

            <button class="app-button primary-button weiter-button"
                    disabled="@( string.IsNullOrEmpty(_selectedTag) || string.IsNullOrEmpty(_hochgeladenesBild) )"
                    @onclick="Ver√∂ffentlichen">
                Ernte ver√∂ffentlichen
            </button>

            @if (string.IsNullOrEmpty(_selectedTag) || string.IsNullOrEmpty(_hochgeladenesBild))
            {
            <p class="disabled-hint">Bitte lade zuerst ein Bild hoch und w√§hle ein Tag aus.</p>
            }
        </div>
    </div>
</div>

@code {
    private string? _hochgeladenesBild = null;

    public class TagItem(string name, string emoji)
    {
        public string Name { get; set; } = name;
        public string Emoji { get; set; } = emoji;
    }
    
    List<TagItem> _gemueseTags = new()
    {
        new("Auberginen", "üçÜ"), new("Gurken", "ü•í"), new("Tomaten", "üçÖ"), new("K√ºrbisse", "üéÉ"), 
        new("Paprika", "üå∂Ô∏è"), new("Zucchini", "ü•í"), new("Kartoffeln", "ü•î"), new("Karotten", "ü•ï"), 
        new("Salate", "ü•¨"), new("Zwiebeln", "üßÖ")
    };
    List<TagItem> _obstTags = new()
    {
        new("Melonen", "üçâ"), new("√Ñpfel", "üçé"), new("Birnen", "üçê"), new("Pfirsiche", "üçë"), 
        new("Kirschen", "üçí"), new("Erdbeeren", "üçì"), new("Trauben", "üçá")
    };

string? _selectedTag = null;
int? Gewicht { get; set; }
int? Laenge { get; set; }
int? Breite { get; set; }
string Kommentar { get; set; } = "";

void ToggleTag(string tag)
{
_selectedTag = (_selectedTag == tag) ? null : tag;
}

    private async Task HandleFileSelection(InputFileChangeEventArgs e)
    {
        var file = e.File;
        if (file == null) return;

        try
        {
            var maxFileSize = 5 * 1024 * 1024;
            if (file.Size > maxFileSize)
            {
                Console.WriteLine("Die Datei ist zu gro√ü.");
                return;
            }
        
            //tempUploads-Ordner erstellen (falls nicht vorhanden)
            var uploadsDir = Path.Combine(Env.WebRootPath, "tempUploads");
            Directory.CreateDirectory(uploadsDir);
        
            //UUID-Dateiname generieren + Extension behalten
            var extension = Path.GetExtension(file.Name);
            var fileName = $"{Guid.NewGuid().ToString("N")}{extension}";
            var filePath = Path.Combine(uploadsDir, fileName);
        
            // Datei in Ordner speichern
            using var stream = file.OpenReadStream(maxFileSize);
            using var fileStream = new FileStream(filePath, FileMode.Create);
            await stream.CopyToAsync(fileStream);
            
            _hochgeladenesBild = $"/tempUploads/{fileName}";
        
            Console.WriteLine($"Bild gespeichert: {filePath}");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Fehler beim Hochladen: {ex.Message}");
        }
    }

    void Ver√∂ffentlichen()
    {
        if (string  .IsNullOrEmpty(_selectedTag) || string.IsNullOrEmpty(_hochgeladenesBild)) return;

        // TODO: echten UserId z.B. aus Auth/Context holen
        int userId = 1;

        float weightGram = (Gewicht ?? 0);
        float lengthCm = Laenge ?? 0;
        float widthCm = Breite ?? 0;

        var dto = new HarvestUploadDto
        {
            UploadId = 0, //Von Upload Service
            ImageUrl = _hochgeladenesBild!, // aktuell Data-URL; sp√§ter URL aus Storage
            Description = Kommentar,
            WeightGram = weightGram,
            WidthCm = widthCm,
            LengthCm = lengthCm,
            UploadDate = DateTime.UtcNow,
            ProfileId = userId
        };

        bool success = UploadService.CreateHarvestUpload(dto);

        if (success)
        {
            Console.WriteLine($"Ver√∂ffentlicht: {_selectedTag}, Bildgr√∂√üe: {_hochgeladenesBild.Length}");
            Nav.NavigateTo("/ProfilTest", forceLoad: true);
        }
        else
        {
            Console.WriteLine("Upload fehlgeschlagen.");
        }
    }
}


