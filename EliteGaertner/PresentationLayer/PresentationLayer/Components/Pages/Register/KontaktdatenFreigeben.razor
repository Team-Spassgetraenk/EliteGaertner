@page "/registrierung/kontaktdaten"
@inject NavigationManager Nav
@inject UserRegistrationState RegistrationState
@rendermode InteractiveServer

<link href="https://fonts.googleapis.com/css2?family=Patrick+Hand&display=swap" rel="stylesheet">

<div class="register-page-container">
    <div class="login-center">

        <div class="register-card">

            <div class="logo-container">
                <img src="pictures/EliteGärtner_logo.png" alt="EliteGärtner Logo" class="app-logo" />
                <h2 class="elitegaertner-title mt-2" style="font-weight: 600; font-size: 2.5rem;">EliteGärtner.</h2>
            </div>
            
            <h3 class="register-title">Deine Kontaktdaten</h3>
            <p class="description-text">Wähle, welche Kontaktdaten du mit gematchten Gärtnern teilen möchtest.</p>
            
            <div class="form-container">
                
                <div class="form-check-group">
                    <div class="form-check-custom">
                        <input class="app-check-input" type="checkbox" id="shareEmail" @bind="shareEmail" @bind:event="onchange" />
                        <label class="app-check-label" for="shareEmail">
                            Email
                        </label>
                    </div>
                    <input class="app-input mt-1 @(EmailMissing ? "input-error" : "")" 
                           placeholder="✉ Email eingeben..." 
                           @bind="email" 
                           @bind:event="oninput"
                           disabled="@(!shareEmail)" />
                </div>

                <div class="form-check-group">
                    <div class="form-check-custom">
                        <input class="app-check-input" type="checkbox" id="shareTel" @bind="shareTelephone" @bind:event="onchange" />
                        <label class="app-check-label" for="shareTel">
                            Telefonnummer
                        </label>
                    </div>
                    <input class="app-input mt-1 @(TelephoneMissing ? "input-error" : "")" 
                           placeholder="✆ Telefonnummer eingeben..." 
                           @bind="telephone" 
                           @bind:event="oninput"
                           disabled="@(!shareTelephone)" />
                </div>
            </div>

            <button class="app-button primary-button mt-4"
                    disabled="@(!FormValid)"
                    @onclick="GoNext">
                Speichern
            </button>
            
            @if (!FormValid)
            {
                <p class="disabled-hint">
                    @(
                        (EmailMissing || TelephoneMissing)
                        ? "⚠️ Bitte die aktivierten Felder ausfüllen."
                        : "Bitte mindestens eine Kontaktmethode auswählen."
                    )
                </p>
            }

        </div>
    </div>
</div>

@code {
    string email = "";
    string telephone = "";
    bool shareEmail = false;
    bool shareTelephone = false;

    // Hilfseigenschaft: Prüft, ob Email ausgewählt, aber leer ist
    private bool EmailMissing => shareEmail && string.IsNullOrWhiteSpace(email);
    
    // Hilfseigenschaft: Prüft, ob Telefon ausgewählt, aber leer ist
    private bool TelephoneMissing => shareTelephone && string.IsNullOrWhiteSpace(telephone);

    // Haupt-Validierungslogik: Formular ist gültig, wenn...
    private bool FormValid => 
        // 1. Mindestens eine Methode ist ausgewählt (oder die Felder sind gefüllt)
        (shareEmail || shareTelephone) &&
        // 2. WENN Email ausgewählt ist, MUSS das Feld gefüllt sein
        (!shareEmail || !string.IsNullOrWhiteSpace(email)) &&
        // 3. WENN Telefon ausgewählt ist, MUSS das Feld gefüllt sein
        (!shareTelephone || !string.IsNullOrWhiteSpace(telephone));

    void GoNext()
    {
        if (FormValid)
        {
            // Speichern im Service
            RegistrationState.Email = email;
            RegistrationState.Telephone = telephone;
            RegistrationState.ShareEmail = shareEmail;
            RegistrationState.ShareTelephone = shareTelephone;

            // Weiterleitung zur Profilerstellungs-Seite
            Nav.NavigateTo("/registrierung/profilerstellung", forceLoad: true);
        }
    }
}

<style>
    /* --- Seiten- und Hintergrundlayout --- */
    .register-page-container {
        background-image: url('pictures/FarmBackground.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 100vh;
        width: 100%;
        font-family: 'Patrick Hand', cursive, sans-serif;
    }

    .login-center {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100%;
        background: rgba(0, 0, 0, 0.1);
    }

    /* --- Registrierungs-Karte --- */
    .register-card {
        width: 90%;
        max-width: 450px; 
        background: rgba(255, 255, 255, 0.95);
        border: 3px solid #000;
        border-radius: 15px;
        box-shadow: 6px 6px 0 0 #000;
        padding: 30px;
        margin: 20px;
    }

    /* --- Logo/Titel/Überschrift --- */
    .logo-container {
        text-align: center;
        margin-bottom: 20px;
    }

    .app-logo {
        width: 80px;
    }

    .app-title {
        font-weight: bold;
        font-size: 2.5rem;
        color: #000;
        margin-top: 5px;
        line-height: 1;
    }
    
    .register-title {
        font-weight: bold;
        font-size: 1.8rem;
        color: #000;
        margin-bottom: 10px;
        text-align: center;
        border-bottom: 2px solid #000;
        padding-bottom: 10px;
    }
    
    .description-text {
        text-align: center;
        font-size: 1.1rem;
        margin-bottom: 30px;
    }

    /* --- Checkbox & Input Styling --- */

    .form-check-group {
        margin-bottom: 25px;
        padding: 15px;
        border: 2px solid #000;
        border-radius: 8px;
        box-shadow: 2px 2px 0 0 #000;
        background-color: rgba(255, 255, 255, 0.8);
    }
    
    .form-check-custom {
        display: flex;
        align-items: center;
        margin-bottom: 5px;
    }
    
    .app-check-input {
        opacity: 0; 
        position: absolute;
    }

    .app-check-label {
        font-size: 1.3rem;
        font-weight: bold;
        color: #000;
        display: block;
        padding-left: 30px; 
        cursor: pointer;
        position: relative;
    }

    /* Pseudo-Element für den custom Checkbox-Style */
    .app-check-label::before {
        content: '';
        position: absolute;
        left: 0;
        top: 3px;
        width: 20px;
        height: 20px;
        border: 3px solid #000;
        border-radius: 4px;
        background-color: #f0f0f0;
        transition: all 0.1s;
    }

    /* Checked State */
    .app-check-input:checked + .app-check-label::before {
        background-color: #8B45B3; 
        border-color: #000;
    }

    /* Checkmark */
    .app-check-input:checked + .app-check-label::after {
        content: '✔';
        position: absolute;
        left: 3px;
        top: 0px;
        font-size: 18px;
        line-height: 1;
        color: white;
        font-family: Arial, sans-serif;
    }


    /* --- Input-Feld (Standard Sketch Style) --- */
    .app-input {
        width: 100%;
        padding: 10px;
        font-size: 1.2rem;
        border: 3px solid #000;
        border-radius: 5px;
        box-shadow: 2px 2px 0 0 #000;
        box-sizing: border-box;
        font-family: 'Patrick Hand', cursive, sans-serif;
        transition: box-shadow 0.1s, border-color 0.1s;
    }

    .app-input:focus {
        outline: none;
        border-color: #8B45B3;
        box-shadow: 4px 4px 0 0 #8B45B3;
    }
    
    /* Fehlerklasse */
    .input-error {
        border-color: red !important;
        box-shadow: 4px 4px 0 0 red !important;
    }

    /* Deaktivierte Inputs stylen */
    .app-input:disabled {
        background-color: #eee;
        border-color: #999;
        color: #999;
        box-shadow: 2px 2px 0 0 #999;
    }

    /* --- Button (Standard Sketch Style) --- */
    .app-button {
        width: 100%;
        padding: 12px;
        font-size: 1.5rem;
        font-weight: bold;
        text-align: center;
        border: 3px solid #000;
        border-radius: 8px;
        cursor: pointer;
        box-shadow: 4px 4px 0 0 #000;
        transition: transform 0.1s, box-shadow 0.1s, background-color 0.2s;
    }

    .primary-button {
        background-color: #8B45B3; 
        color: white;
    }

    .app-button:active {
        transform: translate(4px, 4px);
        box-shadow: 0 0 0 0 #000;
    }

    /* Stil für DEAKTIVIERTEN Button */
    .app-button:disabled {
        background-color: #ccc; 
        color: #999; 
        border-color: #999; 
        cursor: not-allowed;
        transform: none;
        box-shadow: 2px 2px 0 0 #999;
    }
    
    /* Hinweis-Text, wenn Button deaktiviert ist */
    .disabled-hint {
        text-align: center;
        color: #999;
        font-size: 1rem;
        margin-top: 10px;
        margin-bottom: 0;
        font-style: italic;
    }
</style>