@page "/registertest"

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow p-4" style="width: 400px; border-radius: 15px;">
        
        <!-- Logo und Titel -->
        <div class="text-center mb-4">
            <img src="pictures/EliteGärtner-logo.png" alt="EliteGärtner Logo" style="width:80px;"/>
            <h2 class="elitegaertner-title mt-2">EliteGärtner.</h2>
        </div>

        <!-- Input-Felder -->
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input class="form-control" placeholder="" @bind="sirname"/>
        </div>

        <div class="mb-4">
            <label class="form-label">Vorname</label>
            <input class="form-control" placeholder="" @bind="prename"/>
        </div>
        
        <div class="mb-4">
            <label class="form-label">Email</label>
            <input class="form-control" placeholder="" @bind="email"/>
        </div>
        
        <div class="mb-4">
            <label class="form-label">Benutzername</label>
            <input class="form-control" placeholder="@@" @bind="username"/>
        </div>

        <div class="mb-4">
            <label class="form-label">Passwort</label>
            <input class="form-control" type="password" placeholder="" @bind="password"/>
        </div>
        
        <!-- Anmelden Button -->
        <button class="btn w-100 mb-3" style="background-color:#8011d1; color:white;" @onclick="FakeLogin">
            Anmelden
        </button>

        <!-- Registrieren-Link -->
        <p class="text-center text-muted mb-0">Ich habe bereits einen Account?</p>
        <p class="text-center">
            <a href="/logintest" style="color:#8011d1; font-weight:bold;">Jetzt Anmelden</a>
        </p>

    </div>
</div>

@code {
    string sirname = "";
    string prename = "";
    string email = "";
    string username = "";
    string password = "";

    void FakeLogin()
    {
        Console.WriteLine($"Eingegeben: {email} / {password} / {username} / {sirname} / {prename}");
    }
}