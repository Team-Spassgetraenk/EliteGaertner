                </div>

                <div class="report-reason">
                    <input type="checkbox" id="catfishing" @onchange="@(e => UpdateReportReason("Catfishing", e))" checked="@(selectedReportReason == "Catfishing")" />
                    <label for="catfishing">Catfishing</label>
                </div>

